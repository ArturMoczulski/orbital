{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es5", "dom"],
    "types": ["cypress", "node"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "jsx": "react-jsx",
    "baseUrl": "../../../",
    "paths": {
      "@/*": ["./clients/@orbital/phaser-maps/src/*"],
      "@orbital/phaser-ui": ["libs/@orbital/phaser-ui/src"],
      "@orbital/phaser-ui/*": ["libs/@orbital/phaser-ui/src/*"],
      "@orbital/phaser": ["libs/@orbital/phaser/src"],
      "@orbital/phaser/*": ["libs/@orbital/phaser/src/*"],
      "@orbital/react-ui": ["libs/@orbital/react-ui/src"],
      "@orbital/react-ui/*": ["libs/@orbital/react-ui/src/*"],
      "@orbital/core": ["libs/@orbital/core/src"],
      "@orbital/core/*": ["libs/@orbital/core/src/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "../components/**/*.cy.{ts,tsx}",
    "../cypress.config.js"
  ]
}
