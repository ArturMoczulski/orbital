{
  "compilerOptions": {
    "types": ["node", "jest", "reflect-metadata"],
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@orbital/phaser-ui": ["../../libs/@orbital/phaser-ui/src"],
      "@orbital/phaser-ui/*": ["../../libs/@orbital/phaser-ui/src/*"],
      "@orbital/phaser": ["../../libs/@orbital/phaser/src"],
      "@orbital/phaser/*": ["../../libs/@orbital/phaser/src/*"],
      "@orbital/react-ui": ["../../libs/@orbital/react-ui/src"],
      "@orbital/react-ui/*": ["../../libs/@orbital/react-ui/src/*"],
      "@orbital/characters": ["../../libs/@orbital/characters/src"],
      "@orbital/characters/*": ["../../libs/@orbital/characters/src/*"],
      "@orbital/core": ["../../libs/@orbital/core/src"],
      "@orbital/core/*": ["../../libs/@orbital/core/src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.d.ts",
    ".next/types/**/*.ts",
    "../../../libs/@orbital/phaser-ui/src/organisms/GameSettingsPopup.ts",
    "../../libs/@orbital/phaser/src/**/*",
    "../../libs/@orbital/react-ui/src/**/*",
    "../../libs/@orbital/characters/src/**/*",
    "../../libs/@orbital/core/src/**/*"
  ],
  "exclude": ["node_modules"]
}
