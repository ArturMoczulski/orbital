{
  "name": "orbital",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "libs/**",
    "services/**",
    "clients/**",
    "tools/**",
    "!templates/**"
  ],
  "packageManager": "yarn@4.9.2+sha512.1fc009bc09d13cfd0e19efa44cbfc2b9cf6ca61482725eb35bbc5e257e093ebf4130db6dfe15d604ff4b79efd8e1e8e99b25fa7d0a6197c9f9826358e4d65c3c",
  "scripts": {
    "build": "turbo run build",
    "dev": "yarn orb dev",
    "dev:libs": "turbo run dev --filter=libs/** --parallel",
    "dev:scout": "turbo run dev --filter=@scout/* --parallel",
    "test": "jest --config jest.config.cjs",
    "test:unit": "jest --config jest.config.cjs \"unit.spec\"",
    "test:monorepo": "jest --config jest.config.monorepo.cjs",
    "test:plop-modify-json": "yarn workspace @orbital/plop-modify-json test",
    "lint": "turbo run lint",
    "orb": "yarn workspace @orbital/orb run build && node --no-inspect tools/@orbital/orb/dist/src/index.js",
    "// PM2 Management Commands": "",
    "stop": "npx pm2 stop all 2>/dev/null || true && echo 'All services stopped.'",
    "logs": "yarn orb logs",
    "log": "yarn logs",
    "status": "npx pm2 status",
    "watch": "yarn orb watch",
    "debug": "yarn orb debug",
    "restart": "yarn orb restart",
    "down": "yarn orb down",
    "delete": "npx pm2 delete all 2>/dev/null || true && echo 'All services deleted.'",
    "clean": "npx pm2 delete all 2>/dev/null || true && echo 'All services deleted.'"
  },
  "devDependencies": {
    "@babel/core": "^7.22.15",
    "@babel/preset-env": "^7.22.15",
    "@babel/preset-typescript": "^7.21.5",
    "@types/archy": "^0.0.36",
    "@types/jest": "^29.5.14",
    "@types/json-stringify-safe": "^5.0.3",
    "@types/node": "^24.0.4",
    "babel-jest": "^30.0.0",
    "concurrently": "^9.2.0",
    "execa": "^9.6.0",
    "jest": "^30.0.0",
    "jest-util": "^29.7.0",
    "node-plop": "^0.32.0",
    "plop": "^4.0.1",
    "pm2": "^5.3.1",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.1.0",
    "turbo": "^2.5.4",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "archy": "^1.0.0",
    "async-mutex": "^0.5.0",
    "cli-table3": "^0.6.5",
    "commander": "^14.0.0",
    "dotenv": "^16.3.1",
    "errio": "^1.2.2",
    "figlet": "^1.6.0",
    "humanize-duration": "^3.32.1",
    "humanize-duration-ts": "^2.1.1",
    "inquirer": "^12.6.3",
    "js-yaml": "^4.1.0",
    "json-stringify-safe": "^5.0.1",
    "moment": "^2.29.4",
    "nodemon": "^3.1.9",
    "ts-node": "^10.9.2",
    "yargs": "*",
    "zod": "^3.25.67"
  },
  "license": "UNLICENSED"
}
