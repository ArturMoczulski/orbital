{
  "compilerOptions": {
    "baseUrl": ".",
    "typeRoots": ["node_modules/@types", "src/types"],
    "types": ["node"],
    "target": "ES2017",
    "module": "CommonJS",
    "declaration": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node"
  },
  "include": ["src", "src/types/*.d.ts"]
}
