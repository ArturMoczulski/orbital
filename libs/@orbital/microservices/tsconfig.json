{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@orbital/contracts": ["../contracts/dist"],
      "@orbital/contracts/*": ["../contracts/dist/*"],
      "@orbital/core": ["../core/dist"],
      "@orbital/core/*": ["../core/dist/*"],
      "@orbital/bulk-operations": [
        "../../@orbital/bulk-operations/dist",
        "../../@orbital/bulk-operations/src"
      ],
      "@orbital/bulk-operations/*": [
        "../../@orbital/bulk-operations/dist/*",
        "../../@orbital/bulk-operations/src/*"
      ]
    },
    "target": "ES2017",
    "module": "CommonJS",
    "declaration": true,
    "outDir": "dist",
    "rootDir": "src",
    "composite": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "inlineSources": true,
    "sourceRoot": ""
  },
  "include": ["src", "src/types/*.d.ts"],
  "exclude": [
    "**/*.spec.ts",
    "**/*.integration.spec.ts",
    "**/*.test.ts",
    "**/__tests__/**"
  ]
}
