{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@orbital/microservices": [
        "../microservices/src",
        "../microservices/dist"
      ],
      "@orbital/microservices/*": [
        "../microservices/src/*",
        "../microservices/dist/*"
      ],
      "@orbital/singleton-interval": [
        "../singleton-interval/src",
        "../singleton-interval/dist"
      ],
      "@orbital/singleton-interval/*": [
        "../singleton-interval/src/*",
        "../singleton-interval/dist/*"
      ]
    },
    "target": "ES2017",
    "module": "CommonJS",
    "declaration": true,
    "outDir": "dist",
    "composite": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "inlineSources": true,
    "sourceRoot": ""
  },
  "include": ["src", "src/types/*.d.ts"],
  "exclude": [
    "**/*.spec.ts",
    "**/*.integration.spec.ts",
    "**/*.test.ts",
    "**/__tests__/**"
  ],
  "references": [
    { "path": "../microservices" },
    { "path": "../singleton-interval" }
  ]
}
