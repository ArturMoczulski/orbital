{
  "compilerOptions": {
    "target": "ES2017",
    "module": "CommonJS",
    "outDir": "dist",
    "rootDir": "src",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": "../..",
    "paths": {
      "@orbital/core": ["libs/@orbital/core/dist"],
      "@orbital/core/*": ["libs/@orbital/core/dist/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["**/*.spec.ts", "**/*.test.ts"],
  "references": [{ "path": "../core/tsconfig.minimal.json" }]
}
