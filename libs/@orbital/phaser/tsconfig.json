{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "composite": true,
    "baseUrl": "../../..",
    "paths": {
      "@orbital/core": ["libs/@orbital/core/src"],
      "@orbital/core/*": ["libs/@orbital/core/src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["src/__mocks__/**/*.js"],
  "references": [{ "path": "../core" }]
}
