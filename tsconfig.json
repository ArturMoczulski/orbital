{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@orbital/core/*": [
        "libs/@orbital/core/src/*",
        "libs/@orbital/core/dist/*"
      ],
      "@orbital/microservices/*": [
        "libs/@orbital/microservices/src/*",
        "libs/@orbital/microservices/dist/*"
      ],
      "@orbital/typegoose/*": [
        "libs/@orbital/typegoose/src/*",
        "libs/@orbital/typegoose/dist/*"
      ],
      "@orbital/characters/*": [
        "libs/@orbital/characters/src/*",
        "libs/@orbital/characters/dist/*"
      ],
      "@orbital/world-rpc/*": [
        "libs/@orbital/world-rpc/src/*",
        "libs/@orbital/world-rpc/dist/*"
      ],
      // Removed @scout/core mapping
      "@orbital/core": ["libs/@orbital/core/src", "libs/@orbital/core/dist"],
      "@orbital/microservices": [
        "libs/@orbital/microservices/src",
        "libs/@orbital/microservices/dist"
      ],
      "@orbital/typegoose": [
        "libs/@orbital/typegoose/src",
        "libs/@orbital/typegoose/dist"
      ],
      "@orbital/characters": [
        "libs/@orbital/characters/src",
        "libs/@orbital/characters/dist"
      ],
      "@orbital/world-rpc": [
        "libs/@orbital/world-rpc/src",
        "libs/@orbital/world-rpc/dist"
      ],
      // Removed @scout/core mapping
      "@orbital/contracts/*": [
        "libs/@orbital/contracts/src/*",
        "libs/@orbital/contracts/dist/*"
      ],
      "@orbital/contracts": [
        "libs/@orbital/contracts/src",
        "libs/@orbital/contracts/dist"
      ]
    },
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "files": [],
  "references": [
    { "path": "libs/@orbital/core" },
    { "path": "libs/@orbital/microservices" },
    { "path": "libs/@orbital/typegoose" },
    { "path": "libs/@orbital/characters" },
    { "path": "libs/@orbital/world-rpc" },
    { "path": "services/@orbital/admin-gateway" },
    { "path": "services/@orbital/world" }
  ]
}
