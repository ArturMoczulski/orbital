{
  "extends": "../../../tsconfig.json",
  "references": [
    { "path": "../../../libs/@orbital/characters" },
    { "path": "../../../libs/@orbital/core" },
    { "path": "../../../libs/@orbital/typegoose" }
  ],
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "skipLibCheck": true,
    "strictPropertyInitialization": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@orbital/characters": ["../../../libs/@orbital/characters/dist"],
      "@orbital/characters/*": ["../../../libs/@orbital/characters/dist/*"],
      "@orbital/core": ["../../../libs/@orbital/core/dist"],
      "@orbital/core/*": ["../../../libs/@orbital/core/dist/*"],
      "@orbital/typegoose": ["../../../libs/@orbital/typegoose/dist"],
      "@orbital/typegoose/*": ["../../../libs/@orbital/typegoose/dist/*"]
    }
  },
  "include": ["src/**/*"]
}
